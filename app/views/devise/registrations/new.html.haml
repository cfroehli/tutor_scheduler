%h3.text-center Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .form-group.row
    = f.label :username, class: 'col-sm-2 col-form-label'
    .col-sm-10
      = f.text_field :username, class: 'form-control', autofocus: true
  .form-group.row
    = f.label :email, class: 'col-sm-2 col-form-label'
    .col-sm-10
      = f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email"
  .form-group.row
    .col-sm-4
      = f.label :password, class: 'col-form-label'
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
    .col-sm-8
      = f.password_field :password, class: 'form-control', autocomplete: "new-password"
  .form-group.row
    = f.label :password_confirmation, class: 'col-sm-4 col-form-label'
    .col-sm-8
      = f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password"
  .form-group.row
    .col-sm-12.text-center
      = f.button 'Sign up', class: 'btn btn-primary'
= render "devise/shared/links"
