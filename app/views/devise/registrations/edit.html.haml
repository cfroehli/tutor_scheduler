%h3.text-center Edit #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .form-group.row
    = f.label :username, class: 'col-sm-2 col-form-label'
    .col-sm-10
      = f.text_field :username, class: 'form-control', autofocus: true
  .form-group.row
    = f.label :email, class: 'col-sm-2 col-form-label'
    .col-sm-10
      = f.email_field :email, autofocus: true, autocomplete: "email"
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .form-group.row
    .col-sm-6
      = f.label :password, class: 'col-form-label'
      %i (leave blank for no change
      - if @minimum_password_length
        %em
          ,
          = @minimum_password_length
          characters minimum)
    .col-sm-6
      = f.password_field :password, class: 'form-control', autocomplete: "new-password"
  .form-group.row
    = f.label :password_confirmation, class: 'col-sm-6 col-form-label'
    .col-sm-6
      = f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password"
  .form-group.row
    .col-sm-6
      = f.label :current_password, class: 'col-form-label'
      %i (we need your current password to confirm your changes)
    .col-sm-6
      = f.password_field :current_password, class: 'form-control', autocomplete: "current-password"
  .form-group.row
    .col-sm-12.text-center
      = f.button "Update", class: 'btn btn-primary'
%hr/
