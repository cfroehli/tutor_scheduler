%h3.text-center Log in
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-group.row
    = f.label :login, class: 'col-sm-2 col-form-label'
    .col-sm-10
      = f.text_field :login, class: 'form-control', autofocus: true, autocomplete: 'login'
  .form-group.row
    = f.label :password, class: 'col-sm-2 col-form-label'
    .col-sm-10
      = f.password_field :password, class: 'form-control', autocomplete: 'current-password'
  - if devise_mapping.rememberable?
    .form-group.row
      .col-sm-2
      .col-sm-10
        .form-check
          = f.check_box :remember_me, class: 'form-check-input'
          = f.label :remember_me, class: 'form-check-label'
  .form-group.row
    .col-sm-12
      = f.button 'Log in', class: 'btn btn-primary'
= render 'devise/shared/links'
