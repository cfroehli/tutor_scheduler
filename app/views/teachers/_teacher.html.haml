.card
  .card-header
    .float-left
      - unless teacher.image.blank?
        = cl_image_tag teacher.image, secure:true
      = teacher.name
    .float-right
      - if current_user.id == teacher.user.id
        = link_to edit_teacher_path(teacher.id) do
          %i.fa.fa-edit
    .clearfix
  .card-body
    .row
      Teached languages :
      %ul
        - teacher.languages.each do | teached_language |
          %li= teached_language.name

    .row
      .col-sm-12
        = teacher.presentation
